# Maintainer: ArseLinuxOS-Team

pkgname=arse-desktop
pkgver=1.0
pkgrel=1
pkgdesc='ArseLinuxOS configuration files for the desktop (Sway/Wayland)'
arch=('any')
license=('GPL3')
depends=(sway waybar swaylock swaybg swayidle wofi mako)

source=('sway-config' 'waybar-config' 'waybar-style.css' 'wallpaper' 'alacritty.toml')

sha512sums=('SKIP'
            'SKIP'
            'SKIP'
            'f7ab630a54ec574fa7d802762fd77d06c564083041e24675528a27c84c8c9c9592e9d6122a55f7d9bfc48df1a03d90e54e6344d876cb032d2b0dcf27fe885d5d'
            'SKIP')

package() {
  local sway=$pkgdir/root/.config/sway
  local waybar=$pkgdir/root/.config/waybar
  local wallpaper=$pkgdir/root/Pictures/
  local alacritty=$pkgdir/root/.config/alacritty/

  local swaySkel=$pkgdir/etc/skel/.config/sway
  local waybarSkel=$pkgdir/etc/skel/.config/waybar
  local wallpaperSkel=$pkgdir/etc/skel/Pictures/
  local alacrittySkel=$pkgdir/etc/skel/.config/alacritty/

  install -Dm750 sway-config      $sway/config
  install -Dm750 waybar-config    $waybar/config
  install -Dm750 waybar-style.css $waybar/style.css
  install -Dm750 wallpaper        $wallpaper/wallpaper.jpg
  install -Dm750 alacritty.toml   $alacritty/alacritty.toml

  install -Dm644 sway-config      $swaySkel/config
  install -Dm644 waybar-config    $waybarSkel/config
  install -Dm644 waybar-style.css $waybarSkel/style.css
  install -Dm644 wallpaper        $wallpaperSkel/wallpaper.jpg
  install -Dm644 alacritty.toml   $alacrittySkel/alacritty.toml

}
